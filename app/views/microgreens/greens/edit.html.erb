<div class="mx-auto md:w-2/3 w-full">
  <h1 class="font-bold text-4xl">Editing green</h1>

  <%= render "form", green: @model %>

  <%= link_to "Show this green", 
    microgreens_green_path(@model), 
    class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>

