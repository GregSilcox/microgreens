<!DOCTYPE html>
<html>
  <head>
    <title>Microgreens</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <nav class="flex items-center justify-between flex-wrap bg-teal-600 p-6">
      <div class="float-left">
        <div id="name" class="flex float-left first-letter:items-center flex-shrink-0 text-white mr-6">
          <svg class="fill-current h-8 w-8 mr-2" width="54" height="54" viewBox="0 0 54 54" xmlns="http://www.w3.org/2000/svg">
            <path d="M13.5 22.1c1.8-7.2 6.3-10.8 13.5-10.8 10.8 0 12.15 8.1 17.55 9.45 3.6.9 6.75-.45 9.45-4.05-1.8 7.2-6.3 10.8-13.5 10.8-10.8 0-12.15-8.1-17.55-9.45-3.6-.9-6.75.45-9.45 4.05zM0 38.3c1.8-7.2 6.3-10.8 13.5-10.8 10.8 0 12.15 8.1 17.55 9.45 3.6.9 6.75-.45 9.45-4.05-1.8 7.2-6.3 10.8-13.5 10.8-10.8 0-12.15-8.1-17.55-9.45-3.6-.9-6.75.45-9.45 4.05z"/>
          </svg>
          <span class="font-semibold text-2xl tracking-tight">
            <%= link_to 'Microgreens', root_path %>
          </span>
        </div>

        <div id="logo" class="block float-left lg:hidden">
          <button class="flex items-center px-3 py-2 border rounded text-teal-200 border-teal-400 hover:text-white hover:border-white">
            <svg class="fill-current h-3 w-3" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
              <title>Menu</title>
              <path d="M0 3h20v2H0V3zm0 6h20v2H0V9zm0 6h20v2H0v-2z"/>
            </svg>
          </button>
        </div>

        <div id="menu" class="w-full block float-left flex-grow lg:flex lg:items-center lg:w-auto">
          <div class="text-sm lg:flex-grow">

            <%= link_to 'Products', 
              url_for([:microgreens, :products]), 
              class: "block mt-4 lg:inline-block lg:mt-0 text-teal-200 hover:text-white mr-4" %>

            <%= link_to 'Greens', 
              url_for([:microgreens, :greens]), 
              class: "block mt-4 lg:inline-block lg:mt-0 text-teal-200 hover:text-white mr-4" %>

            <% if policy([:microgreens, Order]).index? %>
              <%= link_to 'Orders', 
                url_for([:microgreens, :orders]), 
                class: "block mt-4 lg:inline-block lg:mt-0 text-teal-200 hover:text-white mr-4" %>
            <% end %>

            <% if policy([:microgreens, Donation]).index? %>
              <%= link_to 'Donations',
                url_for([:microgreens, :donations]),
                class: "block mt-4 lg:inline-block lg:mt-0 text-teal-200 hover:text-white mr-4" %>
            <% end %>

            <%#= link_to 'MicroCNC Services', microcnc_posts_path, class: "block mt-4 lg:inline-block lg:mt-0 text-teal-200 hover:text-white mr-4" %>
            <%#= link_to 'Group Directory', root_path, class: "block mt-4 lg:inline-block lg:mt-0 text-teal-200 hover:text-white mr-4" %>
            <%#= link_to 'Looms', root_path, class: "block mt-4 lg:inline-block lg:mt-0 text-teal-200 hover:text-white mr-4" %>
            <%#= link_to 'Games', root_path, class: "block mt-4 lg:inline-block lg:mt-0 text-teal-200 hover:text-white mr-4" %>
          </div>
        </div>
      </div>

      <div class="float-right">
        <div id="authentication" class="w-full block ml-8 flex-grow lg:flex lg:items-center lg:w-auto float-right">
          <%- if current_user %>
            <%= link_to 'Log Out', 
              destroy_user_session_path,  
              method: "delete", 
              data: { turbo_method: :delete }, 
              class: "block mt-4 lg:inline-block lg:mt-0 text-teal-200 hover:text-white mr-4" %>
          <%- else %>
            <%= link_to 'Sign In', 
              new_user_session_path, 
              class: "block mt-4 lg:inline-block lg:mt-0 text-teal-200 hover:text-white mr-4" %>
            <div class="mr-4">|</div>
            <%= link_to 'Sign Up', 
              new_user_registration_path, 
              class: "block mt-4 lg:inline-block lg:mt-0 text-teal-200 hover:text-white mr-4" %>
          <%- end %>
        </div>
      </div>
    </nav>

    <main class="container mx-auto mt-28 px-5 flex">
      <%= yield %>
    </main>
  </body>
</html>
